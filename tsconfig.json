{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */

    "target": "esnext", // or "es2018", etc.
    "module": "esnext", // or "commonjs" for node
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["esnext", "dom"], // include dom for browser use.
    "importHelpers": true,
    "rootDir": "./src",
    "isolatedModules": true,

  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
